FROM centos:centos7
RUN yum install java -y
RUN mkdir /opt/tomcat/
WORKDIR /opt/tomcat
ADD https://dlcdn.apache.org/tomcat/tomcat-9/v9.0.80/bin/apache-tomcat-9.0.80.tar.gz .
RUN tar xvfz apache-tomcat-9.0.80.tar.gz
#RUN mv apache-tomcat-9.0.80.tar.gz /opt/tomcat
EXPOSE 8080
CMD ["/opt/tomcat/apache-tomcat-9.0.80/bin/catalina.sh", "run"]
